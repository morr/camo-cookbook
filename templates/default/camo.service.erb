[Unit]
Description=Camo

[Service]
type=forking
User=<%= node['camo']['user'] %>
EnvironmentFile=<%= "#{node['camo']['systemd']['env_path']}/camo" %>
PIDFile=/var/run/<%= node['camo']['app_name'] %>.pid
ExecStart=/usr/local/bin/node <%= node['camo']['path'] %>/current/server.js
Restart=on-failure

[Install]
WantedBy=multi-user.target
